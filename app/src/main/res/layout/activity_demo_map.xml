<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center"
                android:text="行走路程"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_runlength"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_starttime"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center"
                android:text="行走时间"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_runtime"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <com.tencent.tencentmap.mapsdk.map.MapView
            android:id="@+id/mMapView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_mapmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_location"
                android:layout_width="@dimen/btn_map_width"
                android:layout_height="@dimen/btn_map_heigth"
                android:alpha="0.8"
                android:background="@drawable/shape_round_border_red"
                android:text="@string/location"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_map_textsize" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_round_border_black"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:alpha="0.6"
                android:background="@null"
                android:gravity="center"
                android:text="GPS"
                android:textColor="@color/red"
                android:textSize="@dimen/btn_map_textsize" />

            <TextView
                android:id="@+id/tv_gps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:alpha="0.6"
                android:background="@null"
                android:gravity="center"
                android:text="弱"
                android:textColor="@color/red"
                android:textSize="@dimen/btn_map_textsize" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_runcontrol"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:background="@drawable/shape_round_runcontrol"
            android:text="开始巡护"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_pb_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ProgressBar
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="@drawable/shape_progressbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_marginTop="10dip"
                android:background="@null"
                android:gravity="center"
                android:text="定位搜索中..."
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="220dip"
            android:layout_height="60dip"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:alpha="0.7"
                android:background="@drawable/shape_round_runcontrol"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:alpha="0.7"
                android:background="@drawable/shape_round_runcontrol"
                android:text="继续"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>