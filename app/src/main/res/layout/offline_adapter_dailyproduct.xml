<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="110dip"
                android:layout_height="110dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/noimg"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_zm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="MQ2452233"
                        android:textColor="@color/bg_text"
                        android:textSize="@dimen/size_14" />

                    <TextView
                        android:id="@+id/status_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        android:visibility="gone"
                        android:gravity="center"
                        android:text="审核中"
                        android:textColor="@color/red"
                        android:textSize="@dimen/date_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip" >

                    <TextView
                        android:id="@+id/tv_fl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:scrollbarStyle="outsideInset"
                        android:text="未知"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25"
                    android:layout_marginTop="20dip" >

                    <TextView
                        android:id="@+id/tv_fxsj_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:scrollbarStyle="outsideInset"
                        android:text="发现于："
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fxsj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_fxsj_tip"
                        android:scrollbarStyle="outsideInset"
                        android:text="2015-09-12"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/rl_location"
                        android:layout_width="60dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip" >

                        <ImageButton
                            android:id="@+id/ib_location"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/action_address"
                            android:clickable="false" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>