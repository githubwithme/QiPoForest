<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        layout="@layout/titlebar_taskcontent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/bg_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:stretchColumns="1" >

            <!-- 任务名称 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="任务名称"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_RWMC"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="任务名称"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 责任人姓名 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="责任人姓名"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_ZCRXM"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="责任人姓名"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 开始时间 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="开始时间"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_WRKSSJ"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="开始时间"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 截止时间 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="截止时间"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_WRJZSJ"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="截止时间"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 提醒时间 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="提醒时间"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_WRTXSJ"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="提醒时间"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 重要度 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="重要度"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_ZYD"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="重要度"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 参与人 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="参与人"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_CYR"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="参与人"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 任务描述 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="任务描述"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_RWMS"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="任务描述"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 已完成人员 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="完成任务者"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_ywcry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="暂无人员完成任务"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_14" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="5dip"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/ll_CYR"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:visibility="gone"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_check_yqsq"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="查看延期申请"
            android:textColor="@color/bg_text"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />

        <Button
            android:id="@+id/btn_sqyq_bpq"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="申请延期"
            android:textColor="@color/bg_text"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>