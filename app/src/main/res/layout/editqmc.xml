<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        layout="@layout/titlebar_editqmc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:stretchColumns="1" >

            <!-- 植株号 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:text="植株号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入植株号"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 种名 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="种名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入种名"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 胸径(cm) -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="胸径"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请选择胸径(cm)"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 树高(m) -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="树高"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入树高(m)"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 枝下高(m) -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="枝下高"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="枝下高(m)"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 生长状况 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="生长状况"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入生长状况"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 备注-->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入备注"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 图片 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="现场照片"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="2" >

                    <LinearLayout
                        android:id="@+id/ll_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <ImageButton
                    android:id="@+id/imgbtn_addpicture"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:background="@null"
                    android:src="@drawable/plus" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>